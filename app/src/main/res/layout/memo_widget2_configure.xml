<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_memoconfig2_createnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a New Memo"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_memoconfig2_displaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Displayed Text" />

    <EditText
        android:id="@+id/appwidget2_text"
        style="@android:style/Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Your memo here"
        android:inputType="textMultiLine"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview_memoconfig2_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Background" />

    <ImageView
        android:id="@+id/imageview_memoconfig2_previewbkg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/memo_2_1"
        app:srcCompat="@android:color/transparent" />

    <Button
        android:id="@+id/add2_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/add_widget"
        android:textColorLink="@color/colorPrimary" />

</LinearLayout>